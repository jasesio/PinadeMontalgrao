{
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-standard-scss",
      "stylelint-config-recess-order"
    ],
    "rules": {
      "declaration-property-unit-allowed-list": {
        "/^border/": ["px"],
        "/^padding|^gap/": ["rem"]
      },
      "unit-allowed-list": ["%", "deg", "px", "rem", "ms", "fr", "vh", "vw" ]
    }
  }
  
